{{page-title "StudentListAll"}}
<div class="student-container">

  <div class="student-list">
    <div class="header-container">
      <button class="btn btn-primary btn-m" type="button">&plus; Add</button>
    </div>



    <ul class="w3-ul w3-ul-sub">
      {{#if this.model.length}}
      {{#each this.model as |employee|}}
      <li class="w3-bar w3-bar-sub"  {{on "click" (fn this.goToDetailView employee.emp-id)}} >
        <div class="w3-bar-item">
          <span class="w3-large name-title">{{employee.name}}</span><br>
          <span>{{employee.email}}</span><br>
          <span>{{employee.job-title}}</span>
        </div>
      </li>
      {{/each}}
      {{else}}
      <div class="no-data">No Employees Found</div>
      {{/if}}
    </ul>
  </div>
  <div class="detail-view">
    {{outlet}}
  </div>
</div>

